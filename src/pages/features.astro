---
// Components
import Layout from '../layouts/Layout.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import Feature from '../components/blocks/features/FeatureSticky.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'

const automationLogic = featuresData.filter((f) => f.category === 'Automation Logic')
const timingDelays = featuresData.filter((f) => f.category === 'Timing & Delays')
const devices = featuresData.filter((f) => f.category === 'Devices')
const executionModes = featuresData.filter((f) => f.category === 'Execution Modes')
const monitoring = featuresData.filter((f) => f.category === 'Monitoring & Notifications')
const apiWebhooks = featuresData.filter((f) => f.category === 'REST API & Webhooks')

// SEO
const SEO = {
	title: 'Apilio | Features — Powerful smart home automation',
	description:
		'Explore Apilio\'s features: complex automation logic, precise timing, cross-brand device control, execution modes, monitoring, REST API and webhooks.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		title="Everything you need to <strong>automate</strong> your home"
		text="Apilio gives you the building blocks for automations that actually match how you live."
	/>

	<Feature
		title="Build rules that match real life"
		text="Simple if-then doesn't cut it. Real life is messy — your automations should handle that."
		data={automationLogic}
	/>
	<Feature
		title="Precise control over when things happen"
		text="Not everything should happen instantly. Apilio lets you orchestrate timing down to the minute."
		data={timingDelays}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Your devices, all in one place"
		text="No matter the brand, Apilio brings them together in a single dashboard."
		data={devices}
	/>
	<Feature
		title="Stay in control"
		text="Not every automation should run silently. Sometimes you want a heads-up, sometimes you want to decide."
		data={executionModes}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="See what's happening"
		text="Real-time visibility into every automation, every device, every event."
		data={monitoring}
	/>
	<Feature
		title="For the tinkerers and builders"
		text="Full programmatic access. If it speaks HTTP, it works with Apilio."
		data={apiWebhooks}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>

	<!-- Cross-links -->
	<Section>
		<Row>
			<Col span="6">
				<div class="rounded-lg border border-neutral-100 p-8 text-center dark:border-neutral-800">
					<h3 class="text-xl">See what devices work with Apilio</h3>
					<Button style="primary" link="/integrations">View integrations</Button>
				</div>
			</Col>
			<Col span="6">
				<div class="rounded-lg border border-neutral-100 p-8 text-center dark:border-neutral-800">
					<h3 class="text-xl">Find the right plan for you</h3>
					<Button style="primary" link="/pricing">View pricing</Button>
				</div>
			</Col>
		</Row>
	</Section>

	<CTA />
</Layout>
