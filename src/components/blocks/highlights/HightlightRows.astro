---
// Highlights Section
// ------------
// Description: Use case highlight rows with alternating text and image.

// Components
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/webflow/hero-multiple-triggers-conditions-automation.png'
import highlight02 from '../../../assets/webflow/illustration-cloud-platform-architecture.png'
import highlight03 from '../../../assets/webflow/feature-api-webhooks-automation.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}

const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Lights that know you\'re <strong>home</strong>',
		text: 'Motion detected + it\'s after sunset + no one triggered the override = lights on. Leave the room for 5 minutes = lights off. No false triggers.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		imagePosition: 'right'
	},
	{
		title: 'Heating that <strong>thinks</strong> ahead',
		text: 'Control your Tado thermostat based on who\'s home, the weather forecast, and the time of day. Save energy without sacrificing comfort.',
		image: highlight02,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'Garage door opens as you <strong>arrive</strong>',
		text: '50-metre geofence, zero false triggers. Combine location with time and device state for automations that only fire when they should.',
		image: highlight03,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
