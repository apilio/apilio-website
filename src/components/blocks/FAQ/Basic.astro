---
// Basic FAQ section
// ------------
// Description: A section that contains a list of frequently asked questions with answers.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Accordion from '../../ui/Accordion.astro'
import Card from '../../ui/cards/partials/Card.astro'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="FAQ" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">
				Common <strong>questions</strong> about pricing
			</h2>
			<p class="text-lg leading-relaxed">
				Everything you need to know about Apilio’s plans and billing.
			</p>
		</Col>
		<Col span="2" />
		<Col span="8">
			<Card classes="divide-y divide-neutral-100 dark:divide-neutral-800">
				<Accordion
					title="Is there a free trial?"
					text="Yes — 21 days of full access, no credit card required. Try every feature before you decide."
				/>
				<Accordion
					title="Can I change plans anytime?"
					text="Yes, you can upgrade or downgrade your plan at any time with a single click. Changes take effect immediately."
				/>
				<Accordion
					title="What happens after the trial?"
					text="Choose a plan to continue using Apilio. If you don’t subscribe, your account stays inactive for one month before being deleted."
				/>
				<Accordion
					title="Do you offer refunds?"
					text="Payments are non-refundable, but unused time can be converted to account credits. Get in touch if you need help."
				/>
				<Accordion
					title="Discounts for charities or education?"
					text="Yes — we offer special pricing for charities and educational institutions. Contact us at hello@apilio.com to learn more."
				/>
			</Card>
		</Col>
		<Col span="2" />
	</Row>
</Section>

<style>
	.page-header {
		@apply mx-auto max-w-3xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
</style>
